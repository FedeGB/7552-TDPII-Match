<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.tallerii.match.MatchFragmentMatchResults"
    >

    <com.tallerii.match.components.MLRoundedImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_weight="8"
        android:id="@+id/fmfmr_iv_uphoto"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nombre"
            android:id="@+id/fmfmr_tv_uname"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mail"
            android:id="@+id/fmfmr_tv_umail"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Edad"
            android:id="@+id/fmfmr_tv_uage"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_marginRight="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="No Like"
                android:id="@+id/fmfmr_b_unlike"
                android:background="@drawable/t_down" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="No Like"
                android:id="@+id/fmfmr_b_profile"
                android:background="@drawable/t_medium" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:text="Like"
                android:id="@+id/fmfmr_b_like"
                android:background="@drawable/t_up" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
