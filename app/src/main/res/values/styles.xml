<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NormalTextView" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="InterestCategory" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="InterestDetail" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_marginLeft">35dp</item>
    </style>

    <style name="NormalBoldTextView" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>
